{
  "name": "browser-game",
  "version": "1.0.0",
  "description": "HTML5 Canvas Game",
  "main": "server/server.js",
  "type": "module",
  "scripts": {
    "start": "node server/server.js",
    "dev": "nodemon server/server.js"
  },
  "nodemonConfig": {
    "watch": [
      "**/*.js",
      "**/*.html"
    ],
    "ext": "js,html",
    "ignore": [
      "**/node_modules/"
    ]
  },
  "dependencies": {
    "express": "^4.17.1"
  }
}
