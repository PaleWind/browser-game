{
  "name": "browser-game",
  "version": "1.0.0",
  "description": "HTML5 Canvas Game",
  "main": "server/server.js",
  "type": "module",
  "scripts": {
    "start": "node server/server.js",
    "dev": "nodemon server/server.js"
  },
  "nodemonConfig": {
    "watch": ["web/*.js", "web/*.html"],
    "ext": "js,html",
    "ignore": ["web/node_modules/"]
  },
  "dependencies": {
    "express": "^4.17.1"
  }
}
